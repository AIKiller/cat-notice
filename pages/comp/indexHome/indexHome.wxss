/* pages/comp/indexHome/indexHome.wxss */
@import '/assets/fonts/iconfont-weapp-icon.wxss';
@import '/assets/css/flex.wxss';

.checkboxLabel {
  font-size: 20px;
}

.homeVanCollapse {
  margin: 10px;
}

.homeVanCollapseItem {
  margin-top: 10px;
}

.homeVanCollapseItemContent {
  background-color: #f9f9f9;
  padding: 0px;
}

.vanCollapsePanel {
  position: relative;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 6px;
  margin-top: 12px;
}

.vanPanelContentHeader:after {
  content: '';
  position: absolute;
  left: 4%;
  top: 35px;
  right: 4%;
  height: 1px;
  width: 92%;
  background-color:#CCCCCC;
}

.vanPanelContentHeader>.col-2 {
  color: #8dc63f;
  font-size: 12px;
  text-align: right;
}

.vanPanelContentHeader>.col-4 {
  color: #000;
}

.vanPanelContentHeader> view {
  padding: 10px;
  padding-bottom: 5px;
}
.vanPanelContent > .item{
  color: #000;
  font-size: 45rpx;
}
.vanPanelContent > .item > .item-name{
  display: inline-block;
  width: 80px;
  line-height: 60px;
  height: 40px;
  overflow: hidden;    
  text-overflow:ellipsis;    
  white-space: nowrap;
}
.vanPanelContent > .item > .item-detail{
  display: inline-block;
  font-size: 14px;
  margin-left: 5px;
  height: 25px;
  line-height: 30px;
}
.vanPanelContent > .time{
  color: #3399CC;
  font-size: 28rpx;
  text-align: right;
  padding-right: 10px;
  line-height: 60px;
}
.vanPanelContent> view {
  padding: 15px 2px 15px 10px;
}

.Swiper_Item_Scroll {
  height: 100%;
  width: 100%;
}

.TopSpan {
  width: 100%;
  text-align: center;
  margin-bottom: 30px;
}

.TopSpan_Name {
  width: 100%;
  height: 50px;
  line-height: 50px;
  font-size: 30px;
  color: var(--font-ha);
  font-weight: bold;
}

.TopSpan_Desc {
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: var(--font-hb);
}
