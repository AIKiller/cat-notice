.box-flex{
  display: flex;
	flex-direction: row;
}
/*确定主轴的排列方向 */
.box-row{
  flex-direction:row;
}
.box-row-reverse{
  flex-direction:row-reverse;
}
.box-column{
  flex-direction:column ;
}
.box-column -reverse{
  flex-direction:column -reverse;
}

/*确定项目的换行方式 */
.box-wrap{
  flex-wrap:wrap;
}

.box-wrap-reverse{
  flex-wrap:wrap-reverse;
}

/*确定主轴方向的对齐方式*/
.row-main-start{
  justify-content:flex-start;
}
.row-main-center{
  justify-content:center;
}
.row-main-end{
  justify-content:flex-end ;
}

/*确定交叉轴方向的对齐方式*/
.row-cross-start{
  align-items:flex-start;
}
.row-cross-center{
  align-items:center;
}
.row-cross-end{
  align-items:flex-end;
}
.row-cross-stretch{
  align-items:stretch;
}
.row-cross-baseline{
  align-items:baseline;
}

/*子项属相*/

[class *= 'col-'] {
    padding: 2rem;
}

.col {
    flex-grow: 1;
    flex-basis: 0;
    max-width: 100%;
}
.col-1 { flex-basis: 16.66%; } 
.col-2 { flex-basis: 33.33%; } 
.col-3 { flex-basis: 50%; } 
.col-4 { flex-basis: 66.664%; } 
.col-5 { flex-basis: 83.33%; } 
.col-6 { flex-basis: 100%; }